<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterFormu.SelectPage">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="40"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
                <RowDefinition Height="35"></RowDefinition>
            </Grid.RowDefinitions>

            <Label Text="ID:" Grid.Column="0" Grid.Row="0" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Id" Text="{Binding Id}" Grid.Column="1" Grid.Row="0" IsEnabled="False"/>

            <Label Text="Nombre:" Grid.Column="0" Grid.Row="1" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Nombre" Text="{Binding Dato1}" Grid.Column="1" Grid.Row="1" />

            <Label Text="Apellido Paterno:" Grid.Column="0" Grid.Row="2" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Apellido_Paterno" Text="{Binding Dato2}" Grid.Column="1" Grid.Row="2" />

            <Label Text="Apellido Materno:" Grid.Column="0" Grid.Row="3" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Apellido_Materno" Text="{Binding Dato3}" Grid.Column="1" Grid.Row="3" />

            <Label Text="Direccion:" Grid.Column="0" Grid.Row="4" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Direccion" Text="{Binding Dato4}" Grid.Column="1" Grid.Row="4" />

            <Label Text="Telefono:" Grid.Column="0" Grid.Row="5" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Telefono" Text="{Binding Dato5}" Grid.Column="1" Grid.Row="5" Keyboard="Numeric"/>

            <Label Text="Carrera:" Grid.Column="0" Grid.Row="6" VerticalOptions="Center"/>
            <Picker x:Name="Picker_Carrera" Grid.Column="1" Grid.Row="6"/>

            <Label Text="Semestre:" Grid.Column="0" Grid.Row="7" VerticalOptions="Center"/>
            <Picker x:Name="Picker_Semestre" Grid.Column="1" Grid.Row="7"/>



            <Label Text="Matricula:" Grid.Column="0" Grid.Row="8" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Matricula" Text="{Binding Dato8}" Grid.Column="1" Grid.Row="8"  Keyboard="Numeric"/>

            <Label Text="Correo:" Grid.Column="0" Grid.Row="9" VerticalOptions="Center"/>
            <Entry x:Name="Entry_Correo" Text="{Binding Dato9}" Grid.Column="1" Grid.Row="9" />

            <Label Text="GitHub:" Grid.Column="0" Grid.Row="10" VerticalOptions="Center"/>
            <Entry x:Name="Entry_GitHub" Text="{Binding Dato10}" Grid.Column="1" Grid.Row="10" />




            <Button x:Name="Button_Actualizar" Text="Actualizar Registro" Clicked="Button_Actualizar_Clicked" Grid.Column="0" Grid.Row="11"/>
            <Button x:Name="Button_Eliminar" Text="Eliminar Registro" Clicked="Button_Eliminar_Clicked" Grid.Column="1" Grid.Row="11"/>


        </Grid>
    </ContentPage.Content>
</ContentPage>